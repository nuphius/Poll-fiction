@model List<PollFiction.Data.Model.Poll>
@{
    ViewData["Title"] = "Tableau de bord de ";
    //Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Tableau de bord - @User.Claims.FirstOrDefault(u => u.Type.Equals("name"))</h1>

<hr />
<div class="container">
    <div class="container-form">
        <form action="CodePoll" method="post" class="form1">
            <div>
                <input type="text" class="searchPoll" placeholder="Saisiez un code de sondage" />
                <input type="submit" value="Rechercher" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="container-form">
        @{
            foreach(var poll in Model)
            {
                <div>@poll.PollTitle</div>
                <div><a href="#"> lien tu sondage @poll.PollId </a> </div>
            }
        }
    </div>
</div>

@Html.ActionLink("Déconnecter", "Logout", "Home")
